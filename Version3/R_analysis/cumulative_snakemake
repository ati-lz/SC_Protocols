TECHS = ["MARSseq"]#, "QUARTZseq", "CELseq2", "Dropseq", "SCRBseq", "X10Scilife", "X10Nuclei", "ICELL8", "ddSEQ", "ddSEQexp1", "CB1"]


rule all:
    input:
        expand("Cumulative_gene_final/{tech}_Cumulatives.Robj", tech=TECHS)

rule cumulative_run:
    input:
        seuratObjPath = "/project/devel/alafzi/SC_Protocols/Version3/Seurat_objects_final_rename/Human/{tech}_seu.obj.RData",
        #monocyteAnnot= lambda wildcards: monocyte_dict[wildcards.tech], 
        DSpath = "/project/devel/alafzi/SC_Protocols/Downsampling/DS_secondRound/Human/{tech}.hsap.full.SCE.jointDSmat.Robj"
    output:
        outpatch= "Cumulative_gene_final/{tech}_Cumulatives.Robj"
    shell:
        "Rscript dropout_wrapper_snakemake.R --technology {wildcards.tech} --seuratObj_path {input.seuratObjPath} --DS_path {input.DSpath} --output_path ./Cumulative_gene_final"
